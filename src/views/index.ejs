<!DOCTYPE html>
<html lang="en">


<%- include('./templates/head.ejs') %>

<body>

    <%- include('./templates/header.ejs') %>

    <main>

        <div class="frame">

            <div class="balance">
                <h1 style="font-size: 20px;">My Money</h1>
                <h1 style="font-size: 25px;" name="balance">$10.000</h1>
            </div>

            <div class="activity">

                <div class="actions">
                    <img id="checkel"
                        src="https://img.icons8.com/external-flatart-icons-outline-flatarticons/64/4a90e2/external-plus-ecommerce-flatart-icons-outline-flatarticons.png" />

                    <img src="https://img.icons8.com/color/64/000000/activity-history.png" />
                </div>


                <form class="in-out" action="">

                    <div class="row">
                        <p name="concept">Concept</p>
                        <input type="text">
                    </div>
                    <div class="row">
                        <p name="amount"> Amount </p>
                        <input type="number">
                    </div>
                    <div class="row">
                        <p name="date">Date</p>
                        <input type="date">
                    </div>
                    <div class="row">
                        <p name="action-type">Type</p>
                        <select name="" id="">
                            <option value="">Income</option>
                            <option value="">Outcome</option>
                        </select>
                    </div>


                    <button type="submit">Submit</button>


                </form>








                <% for(let i=0; i<10; i++){ %>
                <div class="operation">

                    <p>Operation name</p>

                    <div class="type">
                        <p name="type"> + </p>
                        <p name="qty"> 100 </p>
                    </div>

                </div>
                <% } %>


            </div>

        </div>

    </main>

    <script>
        let inOutForm = document.querySelector('.in-out')

        inOutForm.style.display = 'none';

        let checkel = document.getElementById('checkel')

        checkel.onclick = function (e) {

            if (inOutForm.style.display == 'none') {
                inOutForm.style.display = 'flex'
            } else if (inOutForm.style.display == 'flex') {
                inOutForm.style.display = 'none'
            }

        }
    </script>

</body>

</html>